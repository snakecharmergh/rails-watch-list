<h2><%= @list.name %></h2>
<%= cl_image_tag("THE_IMAGE_ID_FROM_LIBRARY",
      width: 400, height: 300, crop: :fill) %>
      
<p my-5><strong>Bookmarks</strong></p>

<%= link_to "Add a bookmark", new_list_bookmark_path(@list) %>

<div class="row my-2">
    <% @list.movies.each do |movie| %>
      <% bookmark = Bookmark.find_by(list: @list, movie: movie) %>
          <%= movie.poster_url%>
          <%= movie.title %>
          <%= movie.rating %>
          <%= movie.overview %>
          <%= bookmark.comment %>
          <%= link_to "delete", bookmark_path(bookmark), data: { turbo_method: :delete, turbo_confirm: "Are you sure you want to remove #{movie.title} from your #{@list.name} list"}, class: 'text-danger' %></small>
    <% end %>
</div>
